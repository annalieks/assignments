<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Project1HelpFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="100dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/comfortaa"
                android:text="Проєкт 1. Калькулятор"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="Даний проєкт призначений для знаходження коренів рівнянь трьома з допустимих методів: методом бісекції, методом Ньотона та методом хорд." />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:textFontWeight="700"
                android:textColor="@color/quantum_bluegrey500"
                android:text="Для виконання розрахунків:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="1. Оберіть один з трьох доступних методів знаходження кореня" />


            <ImageView
                android:id="@+id/method_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:src="@drawable/method" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="2. Введіть рівняння. У ролі змінної має виступати символ 'x'" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/equation_input" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="3. Введіть інтервал, посеред якого знаходиться корінь (для методів бісекції та Ньютона)" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/interval_input" />

            <TextView
                android:id="@+id/approxRootText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="або приблизний корінь (для методу Ньютона-Рафсона)" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/approx_root" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="4. Введіть точність розрахунків" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="37.9dp"
                android:src="@drawable/approximation_input" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="5. Натисніть на кнопку 'Знайти корінь'" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/find_root_img" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="6. Зачекайте, доки корінь шукається. Кількість часу залежить від складності рівняння, точності та довжини інтервалу/точності приблизного кореня" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="7. В результаті обчислень на екран буде виведено:" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="- Графік функції з позначеним на ньому знайденим коренем рівняння" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/result_plot" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#815656"
                android:fontFamily="@font/comfortaa"
                android:text="- Задану функцію та точність, а також знайдені корені" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/results_roots" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:textFontWeight="700"
                android:textColor="@color/quantum_bluegrey500"
                android:text="Обробка помилок" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="Якщо на даному інтервалі не існує кореня, буде виведено відповідне повідомлення:" />


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/no_roots_error" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="Якщо метод не можна застосувати до введених даних, буде відображено повідомлення з причиною:" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="Якщо інтервал або функцію було введено некоректно, обчислення не почнуться і буде відображено повідомлення:" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>